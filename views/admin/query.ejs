<!DOCTYPE html>
<html lang="en">
    <%- include('../../partials/admin/head.ejs')%>
<body>

    <%- include('../../partials/admin/header.ejs')%>
    <section id="main">
        <div class="container">
            <div class="row">
                    <%- include('../../partials/admin/left.ejs')%>
                <div class="col-md-9">
                    <h2 class="text-center">Query Management</h2>
                    <%if(message!='mssg'){%>
                        <p><%=message%></p>
                    <%}%>
                    
                    <table class="table table-hover">
                        <tr>
                            <th>S.NO</th>
                            <th>User Email</th>
                            <th>User Query</th>
                            <th>Action</th>
                        </tr>
                        <%data.forEach((value,key)=>{%>
                            <tr>
                                <td><%=key+1%></td>
                                <td><%=value.email%></td>
                                <td><%=value.query%></td>
                                <%if(value.status=='Replied'){%>
                                    <td><a href="/admin/emailform/<%=value.id%>"><button disabled><%=value.status%></button></a></td>
                                <%}else{%>
                                <td id="reply"><a href="/admin/emailform/<%=value.id%>"><button><%=value.status%></button></a></td>
                                <%}%>
                             
                            </tr>
                        <%})%>

                        <%if(!data.length){%>
                            <tr>
                             <td colspan="6"><h4 class="text-center">No Record Found</h4></td>
                            </tr>
                            <%}%>
                        
                    </table>
                </div>
            </div>
        </div>
    </section>
</body>
</html>